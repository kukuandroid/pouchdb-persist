{
  "name": "pouchdb-persist",
  "version": "0.0.6",
  "description": "PouchDB plugin for persistent replication",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/redgeoff/pouchdb-persist.git"
  },
  "keywords": [
    "pouch",
    "pouchdb",
    "replication",
    "persistent",
    "persistent replication",
    "fault-tolerant",
    "retry",
    "couch",
    "couchdb"
  ],
  "author": "Geoffrey Cox",
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/redgeoff/pouchdb-persist/issues"
  },
  "scripts": {
    "test-node": "istanbul test ./node_modules/mocha/bin/_mocha test/test.js",
    "test-browser": "./bin/test-browser.js",
    "jshint": "jshint -c .jshintrc *.js test/test.js",
    "test": "npm run jshint && ./bin/run-test.sh",
    "build": "mkdir -p dist && browserify index.js -o dist/pouchdb-persist.js && npm run min",
    "min": "uglifyjs dist/pouchdb-persist.js -mc > dist/pouchdb-persist.min.js",
    "dev": "browserify test/test.js > test/test-bundle.js && npm run dev-server",
    "dev-server": "./bin/dev-server.js",
    "coverage": "npm test --coverage && istanbul check-coverage --lines 100 --function 100 --statements 100 --branches 100"
  },
  "dependencies": {
    "lie": "^3.1.1",
    "inherits": "~2.0.1",
    "argsarray": "0.0.1",
    "es3ify": "^0.2.2"
  },
  "devDependencies": {
    "bluebird": "^3.5.0",
    "browserify": "~14.4.0",
    "chai": "~4.0.2",
    "chai-as-promised": "~7.0.0",
    "events": "^1.0.2",
    "http-server": "~0.10.0",
    "istanbul": "^0.4.5",
    "jshint": "~2.9.5",
    "mocha": "~3.4.2",
    "phantomjs": "^2.1.7",
    "pouchdb": "pouchdb/pouchdb",
    "request": "^2.36.0",
    "sauce-connect-launcher": "^1.2.2",
    "uglify-js": "^3.0.20",
    "watchify": "~3.9.0",
    "wd": "^1.2.0"
  },
  "browser": {
    "crypto": false
  },
  "browserify": {
    "transform": [
      "es3ify"
    ]
  }
}
